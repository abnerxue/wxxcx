
.content{
	padding: 20rpx 32rpx 0;
	box-sizing: border-box;
	background: #FAFAFA;
	width: 100%;
	position: relative;
}
.title_image{
	position: absolute;
	width: 686rpx;
	height: 410rpx;
	box-sizing: border-box;
}
.title_name{
	width: 686rpx;
	height: 410rpx;
	position: relative;
	z-index: 20;
}
.titles_names{
	position: absolute;
	bottom: 0;
	height: 180rpx;
	width: 100%;
	padding-left: 30rpx;
	box-sizing: border-box;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
}
.title_font{
	font-size: 32rpx;
	margin-bottom: 20rpx;
	color: #FFFFFF;
}
.donation_integral{
	color: #757475;
	font-size: 24rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.integrals{
	margin-right: 30rpx;
}
.integral{
	color: #FFFFFF;
	font-size: 34rpx;
}
.donation{
	width: 100%;
	overflow: hidden;
	background: white;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	padding: 25px;
	box-sizing: border-box;
}
.donation>view{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	margin-bottom: 25px;
}
.donation>view:last-child{
	margin-bottom: 0;
}
.donation>view>view{
	width:120rpx;
	height:40rpx;
	font-size:28rpx;
	font-family:PingFang SC;
	font-weight:400;
	line-height:40rpx;
	color: #666666;
	margin-right: 60rpx;
}
.donation>view>input{
	width: 410rpx;
	font-size: 28rpx;
}
.backgrounds>text:nth-of-type(1){
	margin-top: 60rpx;
}
.backgrounds>text{
	display: block;
	color: #999999;
	font-size: 24rpx;
	margin: 8rpx 33rpx;
}
.primary{
	background: #DD0812;
	color: #fff;
	border: none;
	font-size: 32rpx;
	margin: 99rpx 32rpx 114rpx;
}

